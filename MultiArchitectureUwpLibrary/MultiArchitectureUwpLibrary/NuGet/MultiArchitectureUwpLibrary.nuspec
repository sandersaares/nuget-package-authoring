<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
	<metadata minClientVersion="3.2">
		<id>Example.MultiArchitectureUwpLibrary</id>
		<version>1.0.0</version>
		<description>Example of library that is published as a set of architecture-specific assmeblies for the UWP platform.</description>
		<authors>Sander Saares</authors>
	</metadata>
	<files>
		<!-- Architecture-independent reference library for use at compile-time; generated by the PowerShell script. -->
		<file src="..\bin\Reference\Release\MultiArchitectureUwpLibrary.dll" target="ref\uap10.0" />
		
		<!-- XML documentation file goes together with the reference library. -->
		<file src="..\bin\x86\Release\MultiArchitectureUwpLibrary.xml" target="ref\uap10.0" />
		
		<!-- The rest of the files go in architecture-specific directories. XML documentation is not needed here, though. -->
		<file src="..\bin\x86\Release\MultiArchitectureUwpLibrary**"
			exclude="..\bin\x86\Release\MultiArchitectureUwpLibrary.xml"
			target="runtimes\win10-x86\lib\uap10.0" />
			
		<file src="..\bin\x64\Release\MultiArchitectureUwpLibrary**"
			exclude="..\bin\x64\Release\MultiArchitectureUwpLibrary.xml"
			target="runtimes\win10-x64\lib\uap10.0" />
			
		<file src="..\bin\arm\Release\MultiArchitectureUwpLibrary**"
			exclude="..\bin\arm\Release\MultiArchitectureUwpLibrary.xml"
			target="runtimes\win10-arm\lib\uap10.0" />
	</files>
</package>